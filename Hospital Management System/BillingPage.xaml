<Page x:Class="Hospital_Management_System.BillingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="BillingPage" Loaded="Page_Loaded">

    <Grid Background="#F4F7FC" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Pending Payments" Margin="10" Padding="10">
            <DataGrid x:Name="DgPendingAppointments" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="DgPendingAppointments_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Patient" Binding="{Binding Patient.FullName}" Width="*"/>
                    <DataGridTextColumn Header="Doctor" Binding="{Binding Doctor.FullName}" Width="*"/>
                    <DataGridTextColumn Header="Appt. Time" Binding="{Binding AppointmentDate, StringFormat='dd/MM/yy HH:mm'}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Grid.Column="1" Header="Bill Details" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="5">
                    <TextBlock x:Name="TxtBillPatientName" Text="Patient: [Select from list]" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtBillAppointmentID" Text="Appointment ID: N/A" FontSize="12" FontStyle="Italic"/>
                </StackPanel>

                <GroupBox Grid.Row="1" Header="Service Charges" Margin="5">
                    <DataGrid x:Name="DgServices" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service Name" Binding="{Binding Service.ServiceName}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat={}{0:N0}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="Medicine Charges" Margin="5">
                    <DataGrid x:Name="DgMedicines" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Medicine Name" Binding="{Binding Medicine.MedicineName}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat={}{0:N0}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <StackPanel Grid.Row="3" Margin="5" VerticalAlignment="Bottom">
                    <TextBlock x:Name="TxtTotalAmount" Text="TOTAL: 0" FontSize="20" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Right"/>

                    <TextBlock Text="Payment Method:" Margin="0,10,0,5"/>
                    <ComboBox x:Name="CboPaymentMethod" Margin="0,0,0,10">
                        <ComboBoxItem Content="Cash"/>
                        <ComboBoxItem Content="Bank Transfer"/>
                        <ComboBoxItem Content="Card"/>
                    </ComboBox>

                    <Button x:Name="BtnProcessPayment" Content="CONFIRM PAYMENT" Click="BtnProcessPayment_Click" 
                            FontSize="16" FontWeight="Bold" Padding="10" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Page>