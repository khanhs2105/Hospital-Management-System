<Page x:Class="Hospital_Management_System.RecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="RecordPage" Loaded="Page_Loaded">

    <Grid Background="#F4F7FC" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="MEDICAL RECORD" FontSize="24" FontWeight="Bold" Foreground="#2E4053"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock x:Name="TxtPatientInfo" FontWeight="SemiBold" FontSize="16" Text="Patient: [Name] - "/>
                <TextBlock x:Name="TxtDoctorInfo" FontWeight="SemiBold" FontSize="16" Text="Doctor: [Name]"/>
            </StackPanel>
            <TextBlock x:Name="TxtAppointmentTime" FontSize="14" Text="Appointment: [Time]" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Diagnosis Details" Grid.Column="0" Margin="0,0,10,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Diagnosis:" Margin="5"/>
                    <TextBox x:Name="TxtDiagnosis" AcceptsReturn="True" Height="100" Margin="5" VerticalScrollBarVisibility="Auto"/>
                    <TextBlock Text="Doctor's Note:" Margin="5"/>
                    <TextBox x:Name="TxtDoctorNote" AcceptsReturn="True" Height="200" Margin="5" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Prescription" Grid.Column="1" Margin="10,0,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Select Medicine:"/>
                        <ComboBox x:Name="CboMedicines" DisplayMemberPath="MedicineName" Margin="0,5,0,10"/>
                        <TextBlock Text="Quantity:"/>
                        <TextBox x:Name="TxtQuantity" Margin="0,5,0,10"/>
                        <TextBlock Text="Dosage (e.g., 1 pill morning, 1 pill night):"/>
                        <TextBox x:Name="TxtDosage" Margin="0,5,0,10"/>
                        <Button x:Name="BtnAddMedicine" Content="Add to Prescription" Click="BtnAddMedicine_Click" HorizontalAlignment="Left" Padding="10,5"/>
                    </StackPanel>

                    <DataGrid x:Name="DgPrescriptions" Grid.Row="1" Margin="0,15,0,0" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Medicine Name" Binding="{Binding Medicine.MedicineName}" Width="*"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                            <DataGridTextColumn Header="Unit Price" Binding="{Binding Medicine.UnitPrice, StringFormat={}{0:N0}}" Width="Auto"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat={}{0:N0}}" Width="Auto"/>
                            <DataGridTextColumn Header="Dosage" Binding="{Binding Dosage}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <Button x:Name="BtnSaveRecord" Grid.Row="2" Content="Save Record &amp; Complete" 
                FontSize="16" FontWeight="Bold" Padding="15,10" 
                HorizontalAlignment="Center" Margin="10" Click="BtnSaveRecord_Click"/>
    </Grid>
</Page>